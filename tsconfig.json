{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es5",
		"removeComments": true,
		"preserveConstEnums": true,
		"noImplicitAny": false,
		"noImplicitUseStrict": true,
		"outDir": "./src/dist",
		"rootDir": "./src/ts",
		"sourceMap": false,
		"lib":[//promise のエラー回避のために必要
			"dom",
			"es5",
			"es2015.promise"
		]
	},
	"include": [
		"src/ts/**/*",
		"src/typings/**/*"
	]
}